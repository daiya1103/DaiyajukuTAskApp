.UserProfile
  -if @profile&.avatar&.attached?
    = image_tag @profile.avatar, class: 'UserProfile-Avatar'
  -else
    =image_tag 'default-avatar.png', class: 'UserProfile-Avatar'
  .UserProfile-Content
    %p.UserProfile-Content-Name= @profile.nickname
    %p.UserProfile-Content-Date= @profile.enrollment_date
    .UserProfile-Content-Target
      %p.UserProfile-Content-Target-Ji 目標金額
      %p.UserProfile-Content-Target-Kane
        = @profile.target
        万円
    %p.UserProfile-Content-Theme= @profile.theme
- @tasks.each do |task|
  .card
    .card-head
      = image_tag 'default-avatar.png', class: 'card_icon'
      %p.card-head-name= task.user.username
      %p.card-head-day
        = task.created_at.month
        &frasl;
        = task.created_at.day
      の成果
    .card-body
      .card-body-nippou
        %table.table
          %tbody
            %tr
              %th 出品数
              %td.number= task.exihibits
              %td.unit 個
            %tr
              %th 販売個数
              %td.number= task.solds
              %td.unit 個
            %tr
              %th 売り上げ
              %td.number= task.sale
              %td.unit 円
            %tr
              %th 利益
              %td.number= task.profit
              %td.unit 円
            %tr
              %th 振り返り
              %td.impress{:colspan => '2'}= task.impress
      .card-body-react
        %svg.bi.bi-chat{:fill => "currentColor", :height => "1em", :viewbox => "0 0 16 16", :width => "1em", :xmlns => "http://www.w3.org/2000/svg"}
