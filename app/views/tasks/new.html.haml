.container
  - @task.errors.full_messages.each do |m|
    %li= m
  .task-form
    %h1 日報提出画面
    = form_with(model: @task, local: true) do |f|
      %div
        = f.label :exihibits
      .count
        = f.number_field :exihibits
        %p 個
      %div
        = f.label :solds
      .count
        = f.number_field :solds
        %p 個
      %div
        = f.label :sale
      .count
        = f.number_field :sale
        %p 円
      %div
        = f.label :profit
      .count
        = f.number_field :profit
        %p 円
      %div
        = f.label :impress
      %div
        = f.text_area :impress, class: 'text'
      = f.submit '保存', class: 'btn btn-primary'